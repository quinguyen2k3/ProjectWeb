    <script>

        $(function() {
            var selectedClass = "";
            $("p").click(function(){
            selectedClass = $(this).attr("data-rel");
            $("#portfolio").fadeTo(50, 0.1);
                $("#portfolio div").not("."+selectedClass).fadeOut();
            setTimeout(function() {
              $("."+selectedClass).fadeIn();
              $("#portfolio").fadeTo(50, 1);
            }, 500);
                
            });
        });
            
        function changePrice(button){
            var change = button.value;
            var result = 0;
            var amount = document.getElementById("quantity").value;
            var price = parseFloat(${product.giasp});
            if(change == "-"){
                if(amount == "1")
                    result = 1;
                else
                    result = parseInt(amount) - 1;
            } else {
                result = parseInt(amount) + 1;
            }
            totalPrice = result*price;
			var displayTotal = document.getElementById("total");
			displayTotal.innerHTML = "Total: $"+totalPrice;
        }
        
        function addToCart() {
            var quantity = document.getElementById("quantity").value;
            var productId = ${product.masp}
            var url = "addtocart?quantity=" + quantity + "&productId=" + productId;
            
            window.location.href = url;
        }
    </script>

